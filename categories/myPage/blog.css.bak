*{
    margin:0;
    padding:0;
}
#public{
    position:relative;
    width:100%;
    height:100%;
    font: 14px/1.6 Verdana, 宋体, Helvetica, sans-serif;
}
#mycanvas{
    background-color:black;
    z-index:100000;
}
header{
    position: fixed;
    top: 0px;
    width:100%;
    height:60px;
    color: #fff;
    line-height:50px;
    z-index:1;
}

/* 盒子 */
.userMsg,.echo{
    position:fixed;
    width: 300px;
    height: 300px;
    top:18px;
    left:60px;
    text-align: center;
    font-weight:bold;
    -webkit-transform: scale(0.95);
    -moz-transform: scale(0.95);
    -ms-transform: scale(0.95);
    -o-transform: scale(0.95);
    transform: scale(0.95);
    cursor:pointer;
}
.userMsg{ z-index:8; }
.echo{ z-index:7; }
/* 心 初始化 */
.userMsg::before,.userMsg::after,.echo::before, .echo::after{
    content:"";
    position: absolute;
    top: 40px;
    width: 150px;
    height: 240px;
    background: #c66c75;
    border-radius: 150px 150px 0 0;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
}
.userMsg::before,.echo::before{
    left: 150px;
}
.userMsg::after,.echo::after{
    left:0;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    -webkit-transform-origin: 100% 100%;
    transform-origin: 100% 100%;
}
/* 一些小样式 */
.userMsg::after {
    box-shadow:
            inset -6px -6px 0px 6px rgba(255,255,255,0.1);
}
.userMsg::before {
    box-shadow:
            inset 6px 6px 0px 6px rgba(255,255,255,0.1);
}
.userMsg span::after{
    content:"轻轻刻下你的美";
    position: absolute;
    top:35%;
    left:15%;
    color: white;
    font-weight: 400;
    font-size: 30px;
    text-shadow: -1px -1px 0px rgba(0,0,0,0.2);
    z-index:10;
}
/* 心要动起来 */
@keyframes heartbeat {
    0%   { transform: scale(0.95);}
    100% { transform: scale(0.95);}
    50%  { transform: scale(1.00);}

}
@-webkit-keyframes heartbeat {
    0%   { -webkit-transform: scale(0.95);}
    100% { -webkit-transform: scale(0.95);}
    50%  { -webkit-transform: scale(1.00);}
}

@keyframes echo {
    0%{
        opacity:0.1;
        transform: scale(1);
    }
    100%{
        opacity:0;
        transform: scale(1.4);
    }
}
@-webkit-keyframes echo {
    0%{
        opacity: 0.1;
        -webkit-transform: scale(1);
        transform: scale(1);
    }
    100%{
        opacity: 0;
        -webkit-transform: scale(1.4);
        transform: scale(1.4);
    }
}
.userMsg, .echo{
    -webkit-animation-duration: 2000ms;
    animation-duration: 2000ms;
    -webkit-animation-timing-function:
            cubic-bezier(0, 0, 0, 1.74);
    animation-timing-function:
            cubic-bezier(0, 0, 0, 1.74);
    -webkit-animation-delay: 500ms;
    animation-delay: 500ms;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
    -webkit-animation-play-state: running;
    animation-play-state: running;
}
.userMsg,.echo{
    -webkit-animation-name: heartbeat;
    animation-name: heartbeat;
}
.echo{
    -webkit-animation-name: echo;
    animation-name: echo;
}
a{
    text-decoration: none;
}
ul{
    list-style:none;
    float:right;
}
header li{
     float:left;
 }
header li{
    max-width:65px;
    height:50px;
    padding:0 18px;
}
header li a{
    color: #666;
}
header li:hover a{
    color: #fff;
}
header nav{
    position:relative;
    float:right;
    right:200px;
}
.name:hover,.motto:hover{
    color: #fff;
}
.name,.line{
    font-size:30px;
}
.motto{
    font-size:14px;
}

.content{
    position:relative;
}

#part1,#part2,#part3,#part4,#part5{
    position:relative;
    width:100%;
    height:100%;
    line-height:800px;
    text-align:center;
}
#part1{
    background-color:#000;
}
#part2{
    background-color:#2D3E50;
}
#part3{
    background-color:#81979B;
}
#part4{
    background-color:green;
}
#part5{
    background-color:#81979B;
}
#part1 img,#part2 img,#part3 img,#part4 img,#part5 img{
    position:relative;
    top:30px;
}
.wrap{
    position:relative;
    width:100%;
    height:100%;
}
.menu{
    width: 30px;
    height: auto;
    z-index: 999999999999999;
    position: fixed;
    padding: 0px;
    right: 60px;
    top: 40px;
    cursor:pointer;

}
.menuDetail a{
    display:inline-block;
    font-size: 45px;
    height:0;
    padding-right:50px;
    color: white;
}
.menuDetail a:hover{
    font-style:italic;
    color:#81979B;
}
.show{
    display:block;
}
.hide{
    display:none;
}
.bar{
    position:relative;
    background: white;
    height: 3px;
    margin-bottom: 3px;

}

.bar.center.active {
    -webkit-transform: scale(0);
    -ms-transform: scale(0);
    transform: scale(0);
}

.bar.top.active {
    -webkit-transform: translateX(0) translateY(1px) rotate(45deg);
    -ms-transform: translateX(0) translateY(1px) rotate(45deg);
    transform: translateX(0) translateY(1px) rotate(45deg);
}

.bar.bottom.active {
    -webkit-transform:  translateX(0) translateY(-12px) rotate(-45deg);
    -ms-transform:  translateX(0) translateY(-12px) rotate(-45deg);
    transform: translateX(0) translateY(-12px) rotate(-45deg);
}

.menu_wrap {
    position:fixed;
    height: 100%;
    width: 100%;
    top:0;
    left:0;
    background-color:black;
    opacity:0.9;
    z-index:5;
    text-align:center;
    line-height:600px;
}
.run{
    transform: translate3d(0px, 0px, 0px);
    transform-style: preserve-3d;
    backface-visibility: hidden;
}
.textExp{
   position:absolute;
    bottom:-500px;
    right:260px;
    color:white;
    font-size:80px;
    font-weight:bold;
}
.move{
    transition:All 0.4s ease-in-out;
    -webkit-transition:All 0.4s ease-in-out;
    -moz-transition:All 0.4s ease-in-out;
    -o-transition:All 0.4s ease-in-out;
    transform:translate(0,-800px);
    -webkit-transform:translate(0,-800px);
    -moz-transform:translate(0,-800px);
    -o-transform:translate(0,-800px);
    -ms-transform:translate(0,-800px);
}
.part5{
    position:relative;
    width:100%;
    height:100%;
}

.scroll {
    position: absolute;
    margin-top: 20px;
    display: inline-block;
    bottom:350px;
    left:750px;
    color: #FFF;
}
.scroll:after {
    border-right: 3px solid #FFF;
    border-bottom: 3px solid #FFF;
    -ms-transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    content: '';
    width: 60px;
    height: 60px;
    position: absolute;
    top: 10px;
    margin: auto;
    top: 50px;
    right: 0;
    bottom: 0;
    left: 0;
    -webkit-animation: 3s arrow infinite ease;
    animation: 3s arrow infinite ease;
}
@-webkit-keyframes arrow {
    0%,100% {
        top:50px;
    }
    50% {
        top:80px;
    }
}
@keyframes arrow {
    0%,100% {
        top:50px;
    }
    50% {
        top:80px;
    }
}